---
const { title } = Astro.props;
---

<div>
  <h2>{title}</h2>
  <slot />
</div>

<style lang="scss">
  $dotSize: 12px;
  $row-gap: 1rem;
  $col-gap: 1rem;
  $borderWidth: 4px;

  div {
    display: block;
    position: relative;
    min-width: 50%;
    max-width: 50%;
    padding-top: $row-gap;
  }

  @mixin timeline-dot {
    position: absolute;
    top: $row-gap;

    content: "";
    height: $dotSize;
    width: $dotSize;

    border: 4px solid var(--timeline-color);
    border-radius: 50%;
    box-sizing: content-box;

    z-index: 1;
    background-color: var(--bg-color);
  }

  div:nth-child(odd) {
    text-align: right;
    margin-left: 0;
    margin-right: auto;
    padding-right: $col-gap;

    border-right: $borderWidth solid var(--timeline-color);

    &::after {
      @include timeline-dot();
      right: -$dotSize;
    }
  }

  div:nth-child(even) {
    text-align: left;
    margin-left: auto;
    margin-right: 0;
    padding-left: $col-gap;

    box-shadow: -$borderWidth 0px var(--timeline-color);

    &::before {
      @include timeline-dot();
      left: -$dotSize;
    }
  }

  h2 {
    font-weight: 600;
    font-size: 1.7rem;
  }
</style>
