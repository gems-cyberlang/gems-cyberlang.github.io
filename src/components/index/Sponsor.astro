---
/**
 * For a sponsor's logo and image. The slot is where you put the sponsor's logo image
 */

const { name, url } = Astro.props;
---

<div class="sponsor">
  <a href={url}>
    <slot />
  </a>
  {name}
</div>

<style>
  .sponsor {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    height: 10rem;

    a {
      display: flex;
      height: max-content;
    }
  }

  :global(.sponsor > a > img) {
    display: block;
    margin: auto;
  }
</style>
