---
import { PAGES, SOCIAL_MEDIA_ICONS } from "../../consts";
import HeaderLink from "./HeaderLink.astro";
import HomeLink from "./HomeLink.astro";
import MenuItem from "./MenuItem.astro";
import ThemeDropdown from "./ThemeDropdown.astro";
---

<header>
  <HomeLink />
  <nav class="menu">
    {PAGES.map((page) => <MenuItem {...page} />)}
  </nav>
  <div class="text-start social-media-icons">
    {
      SOCIAL_MEDIA_ICONS.map(({ faClass, link, title }) => (
        <HeaderLink link={link} title={title}>
          <i class={`social-media-icon ${faClass}`} />
        </HeaderLink>
      ))
    }
  </div>

  <ThemeDropdown />
</header>

<style lang="scss">
  @import "../../styles/common.scss";

  :global(header) {
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: solid;
    border-color: var(--divider-color);
    padding-bottom: 0.75rem;
    margin-bottom: 1.5rem;
    gap: 1.7rem;
  }

  .menu {
    display: inline-flex;
    margin-left: auto;
    gap: 1rem;
  }

  .social-media-icons {
    display: inline-flex;
    gap: 0.8rem;
  }

  .social-media-icon {
    font-size: 1.25rem;
  }
</style>
